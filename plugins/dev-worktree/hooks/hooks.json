{
  "description": "Detects active worktree on session start and reminds agent to cd into it",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-active-worktree.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
